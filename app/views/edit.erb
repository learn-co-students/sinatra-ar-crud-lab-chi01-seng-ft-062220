<h1>Edit Article</h1>
<form action="/articles/<%= @article.id %>" method="POST">
<input id="hidden" type="hidden" name="_method" value="PATCH">
  <input type="text" name="article[title]" value="<%= @article.title %>" placeholder="title">
  <input type="text" name="article[content]" value="<%= @article.content %>" placeholder="content">
  <input type="submit">
</form>